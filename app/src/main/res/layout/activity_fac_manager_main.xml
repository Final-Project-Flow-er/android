<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FacManagerMainActivity">

    <LinearLayout
        android:id="@+id/layout_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageButton
            android:id="@+id/btn_logout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_logout"
            android:scaleType="centerInside"
            android:contentDescription="로그아웃"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="10sp"
            android:textColor="#666666" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/libre_barcode_39_text"
            android:text="CHAIN-G"
            android:textColor="#212529"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="찬연 / 관리자님 환영합니다"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/btn_input"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginBottom="12dp"
            android:text="입고"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/btn_navy_selector"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_output"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:text="출고"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/btn_navy_selector"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재고 관리 시스템 v1.0"
            android:textColor="#666666"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="8dp" />
    </LinearLayout>

</RelativeLayout>